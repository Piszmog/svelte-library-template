{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "types": [
      "node",
      "svelte",
      "jest"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/__tests__",
    "src/stories",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.stories.*"
  ]
}
